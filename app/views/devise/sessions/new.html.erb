<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                            <div class="card-body">
                              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                <div class="form-group">
                                  <label class="small mb-1">Correo</label>
                                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control py-4', placeholder: 'Ingrese su correo' %>
                                </div>
                                <div class="form-group">
                                  <label class="small mb-1">Contraseña</label>
                                  <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Ingrese contraseña', class: 'form-control py-4' %>
                                </div>
                                <div class="form-group">
                                  <% if devise_mapping.rememberable? %>
                                    <div class="custom-control custom-checkbox">
                                      <%= f.check_box :remember_me, class: 'custom-control-input' %>
                                      <label class="custom-control-label" for="rememberPasswordCheck">Recordar contraseña</label>
                                    </div>
                                  <% end %>
                                </div>
                                <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                  <%= link_to "¿Olvidó contraseña?", new_password_path(resource_name) %>
                                  <%= f.submit "Ingresar", class: 'btn btn-primary' %>
                                </div>
                              <% end %>
                            </div>
                            <div class="card-footer text-center">
                                <div class="small">
                                  <%= link_to "Necesitas una nueva cuenta? Registrate!", new_registration_path(resource_name) %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <div id="layoutAuthentication_footer">
      <%= render "partials/footer" %>
    </div>
</div>
